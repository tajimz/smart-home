<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:background="@color/white">


    <TextView
        android:id="@+id/tvDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device : LED LIGHT"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        android:textSize="15dp"/>


    <TextView
        android:id="@+id/editDevice"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/theme2"
        android:text="Edit Device"
        android:drawableStart="@drawable/baseline_pencil"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:textSize="18dp"
        android:fontFamily="@font/balooda2"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvDevice"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:clickable="true"

        android:drawableTint="@color/white"


        />
    <TextView
        android:id="@+id/deleteDevice"

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/theme1"
        android:text="Delete Device"
        android:drawableStart="@drawable/baseline_trash"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:textSize="18dp"
        android:fontFamily="@font/balooda2"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/editDevice"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:drawableTint="@color/white"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"/>


</androidx.constraintlayout.widget.ConstraintLayout>